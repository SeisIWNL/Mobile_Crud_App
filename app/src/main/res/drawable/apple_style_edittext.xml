<!-- res/drawable/edittext_selector.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Fondo cuando el EditText estÃ¡ enfocado -->
    <item android:state_focused="true" android:state_enabled="true">
        <shape android:shape="rectangle">
            <solid android:color="#E0E0E0" /> <!-- Color de fondo cuando enfocado -->
            <corners android:radius="8dp" /> <!-- Esquinas redondeadas -->
            <stroke
                android:width="1dp"
                android:color="#CCCCCC" /> <!-- Borde -->
        </shape>
    </item>
    <!-- Fondo por defecto -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Color de fondo por defecto -->
            <corners android:radius="8dp" /> <!-- Esquinas redondeadas -->
            <stroke
                android:width="1dp"
                android:color="#CCCCCC" /> <!-- Borde -->
        </shape>
    </item>
</selector>