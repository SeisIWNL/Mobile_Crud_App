<!-- res/drawable/button_selector.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Estado cuando el bot칩n est치 presionado -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#E0E0E0" /> <!-- Color de fondo cuando presionado -->
            <corners android:radius="20dp" /> <!-- Esquinas redondeadas -->
            <stroke
                android:width="1dp"
                android:color="#CCCCCC" /> <!-- Borde -->
        </shape>
    </item>
    <!-- Estado cuando el bot칩n est치 desactivado -->
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="#FD38404C" /> <!-- Color de fondo cuando desactivado -->
            <corners android:radius="20dp" /> <!-- Esquinas redondeadas -->
            <stroke
                android:width="1dp"
                android:color="#CCCCCC" /> <!-- Borde -->
        </shape>
    </item>
    <!-- Estado por defecto (normal) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Color de fondo por defecto -->
            <corners android:radius="20dp" /> <!-- Esquinas redondeadas -->
            <stroke
                android:width="1dp"
                android:color="#CCCCCC" /> <!-- Borde -->
        </shape>
    </item>
</selector>